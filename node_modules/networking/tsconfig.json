{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "lf",
        "noEmitOnError": true,
        "esModuleInterop": true,
        "declaration": true,
        "pretty": true,
        "rootDir": "src",
        "outDir": "dist",
        "strictNullChecks": true,
        "types": ["node", "socket.io-client", "socket.io"],
        "stripInternal": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ]
}
